<p style="color: green"><%= notice %></p>

<h1>Ilium City Public Library</h1>

<%= form_tag books_path, method: :get do %>
  <div>
    <%= text_field_tag :q, "Enter your search here" %>
  </div>
  <div>
    <%= submit_tag 'search' %>
  </div>
<% end %>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <%= link_to "Reserve", new_book_reservation_path(book), method: :post %>
  <% end %>
</div>

<% if current_user %>
  <%= link_to "Register a book", new_book_path %>
<% end %>
